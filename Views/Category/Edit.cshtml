@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Edit category</h2>
            <hr />
        <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <input asp-for="Name" class="form-control" placeholder="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="DisplayOrder" class="form-control" placeholder="DisplayOrder"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Return</a>
    </div>
</form>

@section Scripts
{
    @{
     <partial name="_ValidationScriptsPartial"/>
    }
}