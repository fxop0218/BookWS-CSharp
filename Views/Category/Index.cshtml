@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create new category
                New caregory
            </a>
        </div>
    </div>
</div>
<br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category name</th>
                <th>Display order</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <tbody>
            @foreach (var obj in Model)
            {
                    <tr>
                        <td width="20%">
                        @obj.Id
                        </td>
                            <td width="30%">
                        @obj.Name
                        </td>
                        <td width="30%">
                        @obj.DisplayOrder
                        </td>
                        <td width="10%">
                            <div class="w-75 btn-group" role="group">
                                    <a asp-asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-arrow-clockwise">Edit</i></a>
                            </div>
                        </td>
                        <td width="10%">
                            <div class="w-75 btn-group" role="group">
                                    <a asp-asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-x-lg">Delete</i></a>
                            </div>
                        </td>
                    </tr>    
            }
            </tbody>
        </thead>
    </table>


